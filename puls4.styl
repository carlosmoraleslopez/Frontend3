gris_oscuro = #444
gris_claro = lighten(gris_oscuro,40%)

footer
	background-color gris_oscuro
	color white
	font-weight bold
header
	background gris_oscuro
	color white
	padding 1em

	h1
		font-size 18px
		font-weight normal
		padding 0
		margin 0
	
	.logo 
		width 52px
		height 52px
		border 1px dashed invert(gris_oscuro)
	.usuario
		.avatar
			border 1px dashed invert(gris_oscuro)
			border-radius 50%
			height 50px
			width 50px
section 
	padding 1.2em

	article 
		border 1px solid gris_claro
		border-bottom-left-radius 0.8em
		border-botton-right-radius 0.8em
		overflow hidden
		margin-bottom 1.2em
		figure
			background-color gris_claro
			height 160px
			width 120px

		h2
		 	font-size 18px
			color gris_oscuro
		.acciones
			border-top 3px solid gris_claro
			padding 0.8em
			min-height 3em
		.fecha
			position relative
			right 20px	

